{
  "name": "@work-pack/work-auth",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "generate-types": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma generate",
          "cwd": "apps/work-auth"
        }
      },
      "build": {
        "dependsOn": [
          "generate-types"
        ],
        "executor": "@nrwl/node:webpack",
        "options": {
          "outputPath": "dist/apps/work-auth",
          "main": "apps/work-auth/src/main.ts",
          "tsConfig": "apps/work-auth/tsconfig.app.json",
          "assets": [
            "apps/work-auth/src/assets"
          ]
        },
        "configurations": {
          "production": {
            "optimization": true,
            "sourceMap": false,
            "extractLicenses": true
          },
          "development": {
            "optimization": false,
            "sourceMap": true,
            "extractLicenses": false
          }
        }
      },
      "serve": {
        "executor": "@nrwl/node:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@work-pack/work-auth:build"
        },
        "configurations": {
          "production": {
            "buildTarget": "@work-pack/work-auth:build:production"
          },
          "development": {
            "buildTarget": "@work-pack/work-auth:build:development"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "executor": "@nrwl/workspace:run-commands",
        "options": {
          "command": "docker build -f apps/work-auth/Dockerfile . -t work-pack-work-auth"
        }
      },
      "migrate-prisma": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma migrate dev",
          "cwd": "apps/work-auth"
        }
      }
    }
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/passport": "^11.0.5",
    "cookie-parser": "^1.4.7",
    "graphql": "^16.11.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/passport-jwt": "^4.0.1"
  }
}
